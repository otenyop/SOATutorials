<process name="bmsBPELProcess"
               targetNamespace="http://soahost.co.ke/SOATutorial/BillingManagementSystem/bmsBPELProcess"
               xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
               xmlns:client="http://soahost.co.ke/SOATutorial/BillingManagementSystem/bmsBPELProcess"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://soahost.co.ke/SOATutorial/BillingManagementSystem/bmsInterface"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension">

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <partnerLinks>
    <partnerLink name="bmsSOAPService" partnerLinkType="ns1:bmsSOAPService" partnerRole="bmsCallbackAsyncPortType"
                 myRole="bmsRequestAsyncPortType"/>
  </partnerLinks>
  <variables>
    <variable name="bmsRequestReceiveInputVariable" messageType="ns1:requestMessage"/>
    <variable name="bmsCallbackInvokeInputVariable" messageType="ns1:callbackMessage"/>
  </variables>
  <sequence name="main">
    <receive name="bmsRequestReceive" createInstance="yes" partnerLink="bmsSOAPService"
             portType="ns1:bmsRequestAsyncPortType" operation="bmsRequestAsyncOperation"
             variable="bmsRequestReceiveInputVariable"/>
    <assign name="bmsTransformation">
      <bpelx:annotation>
        <bpelx:pattern patternName="bpelx:transformation"></bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from>ora:doXSLTransformForDoc("../Transformations/bmsTransformation.xsl", $bmsRequestReceiveInputVariable.bmsRequestAsyncMessagePart)</from>
        <to variable="bmsCallbackInvokeInputVariable" part="bmsCallbackAsyncMessagePart"/>
      </copy>
    </assign>
    <invoke name="bmsCallbackInvoke" partnerLink="bmsSOAPService"
            portType="ns1:bmsCallbackAsyncPortType" operation="bmsCallbackAsyncOperation"
            inputVariable="bmsCallbackInvokeInputVariable" bpelx:invokeAsDetail="no"/>
  </sequence>
</process>